<div id="post">
  <div class="scroll-header">
    <a class="logo" href="<%- config.root %>"><%- config.title %></a>
    <span> - <%- page.title %></span>
    <div class="progress"></div>
  </div>
  <div class="cover"><img src="<%- url_for(page.cover) %>" alt=""></div>
  <article>
    <header>
      <h1 class="title"><%- page.title %></h1>
      <div class="post-on">
        <div class="date">
          <span class="label">发布：</span>
          <span class="value"><%= page.date.format(config.date_format) %></span>
        </div>
        <% if(page.categories && page.categories.length) { %>
        <div class="categories">
          <span class="label">分类：</span>
          <%- list_categories(page.categories, { show_count: false }) %>
        </div>
        <% } %>
        <% if(page.categories && page.tags.length) { %>
        <div class="tags">
          <span class="label">标签：</span>
          <%- list_tags(page.tags, { show_count: false }) %>
        </div>
        <% } %>
      </div>
    </header>
    <div class="content">
      <%- page.content %>
    </div>
  </article>
  <%- partial('_partial/pagination', {page: page}) %>
  <div class="comments">
    <%- partial('_partial/comment', {
    shortname: config.disqus_shortname
    }) %>
  </div>
</div>
