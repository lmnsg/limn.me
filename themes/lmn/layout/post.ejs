<div class="content-area">
    <div class="post">
        <!-- Post Content -->
        <div class="container">
            <article>
                <!-- Title date & tags -->
                <div class="post-header">
                    <h1 class="entry-title">
                        <%- page.title || theme.default_post_title || "Untitled" %>
                        <% if (page.subtitle && page.subtitle.length) { %>
                        <p><%- page.subtitle %></p>
                        <% } %>
                    </h1>
                    <p class="posted-on">
                        <%= page.date.format(config.date_format) %>
                    </p>
                    <div class="tags-links">
                        <% if (page.tags) { %>
                        <% page.tags.each(function(tag){ %>
                        <a href="<%= config.root %>tags/<%= tag.name %>/" rel="tag">
                            <%- tag.name %>
                        </a>
                        <% }); %>
                        <% } %>
                    </div>
                </div>
                <!-- Post Main Content -->
                <div class="entry-content">
                    <%- page.content %>
                </div>
            </article>
            <!-- Pre or Next -->

            <div class="nav-links">
                <% if (page.prev) { %>
                <div class="nav-previous nav-link">
                    <a href="<%- config.root %><%- page.prev.path %>" rel="prev"><span
                        class="meta-arraw meta-arraw-left"></span> <%- page.prev.title %></a>
                </div>
                <% } %>
                <% if (page.next) { %>
                <div class="nav-next nav-link">
                    <a href="<%- config.root %><%- page.next.path %>" rel="prev"><%- page.next.title %> <span
                        class="meta-arraw meta-arraw-right"></span></a>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Comments -->
    <div class="comments-container">
        <%- partial('_partial/comment', {
        shortname: config.disqus_shortname
        }) %>
        <script>
            var $container = document.querySelector('.comments-container')
            var $placeholder

            var timer = setInterval(function() {
            	if (document.querySelector('#dsq-app1')) {
            		if ($placeholder) $container.removeChild($placeholder)
            		return clearInterval(timer)
                }
	            if (!$placeholder) {
		            $placeholder = document.createElement('i')
		            $placeholder.innerText = '本站使用DSIQUS，若您加载不出评论，请先科学上网。'
		            $container.appendChild($placeholder)
                }
            }, 3000)
        </script>
    </div>
</div>


