<div id="post">
  <article>
    <header>
      <h1 class="title"><%- page.title %></h1>
      <div class="post-on">
        <div class="date">
          <span class="label">发布：</span>
          <span class="value"><%= page.date.format(config.date_format) %></span>
        </div>
        <div class="categories">
          <span class="label">分类：</span>
          <%- list_categories(page.categories, { show_count: false }) %>
        </div>
        <div class="tags">
          <span class="label">标签：</span>
          <%- list_tags(page.tags, { show_count: false }) %>
        </div>
      </div>
    </header>
    <!-- Post Main Content -->
    <div class="content">
      <%- page.content %>
    </div>
  </article>
  <!-- Comments -->

  <%- partial('_partial/comment', {
  shortname: config.disqus_shortname
  }) %>
</div>


